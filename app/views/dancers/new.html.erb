<h1>Add dancer</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@dancer) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :country %>
      <%= f.text_field :country, class: 'form-control' %>

      <%= f.select :is_boy do %>
        <% [['boy', true], ['girl', false]].each do |c| %>
          <%= content_tag(:option, c.first, value: c.last) %>
        <% end %>
      <% end %>

      <%= f.submit "Add dancer", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
